<div class="card p-5">
    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

    {% if form.date is defined %}
        {{ form_row(form.date) }}
    {% endif %}
    {{ form_row(form.title, {'attr': {'placeholder': 'Titre de l\'annonce'}}) }}
    {{ form_row(form.content, {'attr': {'placeholder': 'Contenu de l\'annonce', 'rows': 10}}) }}
    {{ form_row(form.author) }}
    {{ form_row(form.published) }}
    {{ form_row(form.image) }}
    {{ form_row(form.categories) }}
   {# <div class="pb-3 pt-3">
        <a href="#" id="add_category" class="btn btn-outline-secondary btn-sm">Ajouter une cat√©gorie</a>
    </div>#}

    {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}

    {{ form_rest(form) }}
    {{ form_end(form) }}
</div>