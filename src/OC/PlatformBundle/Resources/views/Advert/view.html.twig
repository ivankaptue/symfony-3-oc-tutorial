{% extends "OCPlatformBundle::layout.html.twig" %}

{% block title %}
    Lecture d'une annonce - {{ parent() }}
{% endblock %}

{% block ocplatform_body %}

    {% if advert.image is not null %}
        <img src="{{ asset(advert.image.webPath) }}" alt="{{ advert.image.alt }}" width="300px" height="auto">
    {% endif %}
    <span>
        <h2>
            {{ advert.title }}
        </h2>
            <i>Par {{ advert.author }}, le {{ advert.date|date('d/m/Y') }}</i>
    </span>

    <div class="alert alert-success py-5">
        {{ advert.content }}
    </div>

    <div class="card">
        <div class="card-title">Applications</div>
        <div class="card-content">
            <ul>
                {% for application in advert.applications %}
                    <li><i>{{ application.author }}</i> <span class="text-primary">{{ application.content }}</span></li>
                {% endfor %}
            </ul>
        </div>
    </div>

    <p class="mt-5 mb-5">
        <a href="{{ path('oc_platform_home') }}" class="btn btn-outline-secondary btn-sm">
            <i class="fa fa-chevron-left"></i>
            Retour Ã  la liste
        </a>
        <a href="{{ path('oc_platform_edit', {'id': advert.id}) }}" class="btn btn-outline-secondary btn-sm">
            <i class="fa fa-edit"></i>
            Modifier l'annonce
        </a>
        <a href="{{ path('oc_platform_delete', {'id': advert.id}) }}" class="btn btn-danger btn-sm">
            <i class="fa fa-trash"></i>
            Supprimer l'annonce
        </a>
    </p>

{% endblock %}